{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "src/**",
      "pyproject.toml",
      "requirements.txt",
      "railway.json"
    ]
  },
  "deploy": {
    "startCommand": "hypercorn wave_backend.api.main:app --bind \"[::]:$PORT\"",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 1
  }
}